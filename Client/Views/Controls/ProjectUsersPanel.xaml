<UserControl x:Class="Client.Views.Controls.ProjectUsersPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="460" d:DesignWidth="174">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisiblity" />
    </UserControl.Resources>

    <ListBox HorizontalAlignment="Stretch" ItemsSource="{Binding UserList}" Name="listBox1" Background="#1C1900AF">

        <ListBox.ItemTemplate>
            <DataTemplate>
                <Grid Background="BlanchedAlmond">
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="{Binding FirstName}" FontWeight="Bold"  />
                    <TextBlock Grid.Row="0" Margin="15,0,0,0" Text="{Binding Surname}" TextTrimming="CharacterEllipsis" FontWeight="Bold"  />
                    <TextBlock Grid.Row="1" Text="{Binding Username}" TextTrimming="CharacterEllipsis" />
                    
                    <Button Visibility="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBox}},
                        Path=DataContext.IsDeleteButtonVisible, Converter={StaticResource BoolToVisiblity}}"
                            Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Content="X" />
                    
                </Grid>
            </DataTemplate>
        </ListBox.ItemTemplate>

    </ListBox>

</UserControl>
