<UserControl x:Class="Client.Views.Controls.CommandPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="67" d:DesignWidth="230">
    <Grid>
        <Button Content="Delete" Height="44" HorizontalAlignment="Left" Margin="149,12,0,0" Name="button1" VerticalAlignment="Top" Width="55" Command="{Binding Path=DeleteSelectedBugsCommand}" />
        <Button Content="Add" Height="44" HorizontalAlignment="Left" Margin="10,12,0,0" Name="button2" VerticalAlignment="Top" Width="55" Command="{Binding Path=NewBugCommand}" />
        <Button Content="Edit" Height="44" HorizontalAlignment="Left" Margin="80,12,0,0" Name="button3" VerticalAlignment="Top" Width="55" Command="{Binding Path=EditBugCommand}" />
    </Grid>
</UserControl>
